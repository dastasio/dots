!------------------------------------------------------------------------------
! u r x v t

URxvt*geometry:             112x22  
# size_gnome=13             size_i3=16
URxvt*font:                 xft:Inconsolata\ for\ Powerline:size=11

URxvt*urlLauncher:          google-chrome-stable  
URxvt*scrollBar:            false
URxvt*scrollBar_right:      true
URxvt*scrollColor:          #000000

! transparency
urxvt*depth: 32

